func test_functional()
{
  print "\n< test_functional() >";

  print C + " == " + C2 + " == " + Closure;

  func inner_fn(i)
  {
    var g = new C(func(self, arg0, arg1, arg2)
    {
      print "Self.a = " + self.a;
      print "Arg0   = " + arg0;
      print "Arg1   = " + arg1;
      print "Arg2   = " + arg2;

      return "Closure Return Value";
    });

    // Captured Variable.
    g.a = i;
    return g;
  }

  var my_g = inner_fn("This is a closed value");
  print my_g("Hello", "My", "Good Sir");
}

